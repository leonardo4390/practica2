<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MVC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <header class="bg-dark text-white p-3 mb-4">
        <div class="container">
            <h2>MiniTienda MVC</h2>
            <nav>
                <a asp-controller="Home" asp-action="Index" class="text-white me-3">Inicio</a>
                <a asp-controller="Productos" asp-action="Index" class="text-white">Productos</a>
            </nav>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="bg-light text-center mt-4 p-3">
        <p>© 2025 - MiniTienda MVC</p>
    </footer>
</body>
</html>
